<Layout title="Institucii - Bookmark Dashboard">
  <h1 class="page-header">ДРЖАВНИ ИНСТИТУЦИИ</h1>
  
  <div class="institutional-tabs">
    <div class="institutional-tab-nav">
      <button class="institutional-tab-btn active" onclick="switchInstitutionalTab('ministerstva')">
        МИНИСТЕРСТВА
      </button>
      <button class="institutional-tab-btn" onclick="switchInstitutionalTab('institucii')">
        ИНСТИТУЦИИ
      </button>
      <button class="institutional-tab-btn" onclick="switchInstitutionalTab('banki')">
        БАНКИ
      </button>
    </div>

    <!-- Ministerstva Tab -->
    <div id="tab-ministerstva" class="institutional-tab-content active">
      <div class="group">
        <div class="links-grid institutional-grid" style="grid-template-columns: repeat(5, 1fr);">
          {ministerstva.map(ministry => (
            <a href={ministry.url} target="_blank" class="link-item" data-abbrev={ministry.abbrev}>
              {ministry.name}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Institucii Tab -->
    <div id="tab-institucii" class="institutional-tab-content">
      <div class="group">
        <div class="links-grid institutional-grid" style="grid-template-columns: repeat(5, 1fr);">
          {institucii.map(institution => (
            <a href={institution.url} target="_blank" class="link-item" data-abbrev={institution.abbrev}>
              {institution.name}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Banki Tab -->
    <div id="tab-banki" class="institutional-tab-content">
      <div class="group">
        <div class="links-grid institutional-grid" style="grid-template-columns: repeat(5, 1fr);">
          {banki.map(bank => (
            <a href={bank.url} target="_blank" class="link-item" data-abbrev={bank.abbrev}>
              {bank.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @media (max-width: 1200px) {
    .institutional-grid {
      grid-template-columns: repeat(4, 1fr) !important;
    }
  }
  
  @media (max-width: 900px) {
    .institutional-grid {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }
  
  @media (max-width: 600px) {
    .institutional-grid {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
  
  @media (max-width: 400px) {
